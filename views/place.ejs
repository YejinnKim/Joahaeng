<!-- Property List Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-0 gx-5 align-items-end">
            <div class="col-lg-6">
                <div class="text-start mx-auto mb-3 wow slideInLeft" data-wow-delay="0.1s">
                    <!-- <h1 class="mb-4">지역</h1> -->
                </div>
            </div>
        </div>
        <div class="tab-content">
            <div class="tab-pane fade show p-0 active">
                <div class="row g-4">
                    <% if (!data) { %>
                    <div class="container-xxl wow fadeInUp" data-wow-delay="0.1s">
                        <div class="container text-center">
                            <div class="row justify-content-center">
                                <div class="col-lg-6">
                                    <i class="bi bi-exclamation-triangle display-1 text-primary"></i>
                                    <h1 class="mb-4">ERROR</h1>
                                    <p class="mb-4">검색 결과가 없습니다. 다시 검색해주세요.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } else { %>
                        <% for(value of data) { %>
                        <% if (!(value.contenttypeid && value.title && value.addr1)) continue %>
                        <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s" style = " height: 400px;">
                            <div class="property-item rounded overflow-hidden" >
                                <div class="position-relative overflow-hidden" >
                                    <p style="text-align: center;">
                                        <a href="/place/detail?contentid=<%= value.contentid %>">
                                            <img class="img-fluid" style="height: 250px;" src="<%= value.firstimage %>" alt="">
                                        </a>
                                    </p>
                                </div>
                                <div class="p-4 pb-0">
                                    <a class="d-block h5 mb-2" href="/place/detail?contentid=<%= value.contentid %>">
                                        <%= value.title %>
                                    </a>
                                    <p><i class="fa fa-map-marker-alt text-primary me-2"></i><%= value.addr1 %></p>
                                </div>
                                <div class="d-flex border-top">
                                    <small class="flex-fill text-center border-end py-2" onclick="location.href='/board/write?contentid=<%=value.contentid%>'"><i class="fa fa-pen text-primary me-2"></i>후기</small>
                                    <small class="flex-fill text-center py-2" onclick="zzim(<%=value.contentid%>)">
                                        <% let chk=0 %>
                                        <% for (let i=0; i < zzim.length; i++) { %>
                                            <% if (zzim[i].contentid == value.contentid) { %>
                                                <i id="<%= value.contentid %>" class="fa fa-heart text-primary me-2"></i>찜
                                                <% chk=1 %>
                                                <% break %>
                                            <% } %>
                                        <% } %>
                                        <% if (!chk) { %> 
                                            <i id="<%= value.contentid %>" class="far fa-heart text-primary me-2"></i>찜
                                        <% } %>
                                    </small>
                                </div>
                            </div>
                        </div>
                        <% } %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Property List End -->