<!-- Call to Action Start -->
<style>
    @import url('https://fonts.googleapis.com/css2?family=Do+Hyeon&family=Ubuntu:wght@700&display=swap');
    </style>
<div class="container-xxl py-5">
    <div class="container">
        <% if (user) { %>
        <div class="mb-3 wow fadeIn text-md-end">
            <a href="/board/write" class="btn btn-dark py-2 px-3">글쓰기</a>
        </div>
        <% } %>
        <% if (!data[0]) { %>
        <div class="container-xxl wow fadeInUp" data-wow-delay="0.1s">
            <div class="container text-center">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <h2 class="mb-4">작성한 후기가 없습니다.</h2><br>
                        <a class="btn btn-primary py-3 px-5" href="/board/write">후기 작성하러 가기</a>
                    </div>
                </div>
            </div>
        </div>
        <% } else { %>
        <% data.forEach(value => { %>
        <div class="bg-light rounded p-3">
            <div class="bg-white rounded p-4" style="border: 1px dashed rgba(0, 185, 142, .3)">
                <div class="row g-5 align-items-center">
                    <% if (value.multiple == 0) { %>
                        <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                            <img class="img-fluid rounded w-100" src="/public/uploads/<% image.forEach(img => { if (img.board_ID == value.board_ID) { %><%= img.filename %><% }})%>" alt="">
                        </div>
                    <% } else { %>
                        <div class="col-lg-6 wow fadeIn owl-carousel header-carousel">
                        <% image.forEach(img => { %>
                        <% if (img.board_ID == value.board_ID) { %>
                            <div class="header-item" data-wow-delay="0.1s">
                                <img class="img-fluid rounded w-100" src="/public/uploads/<%= img.filename %>" alt="">
                            </div>
                        <% } %>
                        <% }) %>
                        </div>
                    <% } %>
                    <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                        <div class="text-md-end">@<%= value.user_ID %></div>
                        <div class="mb-4">
                            <% if(value.contentid == 'null') { %>
                                <h3 class="mb-3"><%= value.title %></h3>  
                            <% } else { %>
                                <a href="/place/detail?contentid=<%= value.contentid %>">
                                    <h3 class="mb-3"><%= value.title %></h3>
                                </a>
                            <% } %>
                            <hr>
                        </div>
                        <div class="mb-3" style="height: 180px;">
                            <p><%= value.content %></p>
                        </div>
                        <div class="mb-5">
                            <p class="p-2 rounded bg-light" style="display: inline-block; margin: auto;">#<%= value.tag %></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% }) %>
        <% } %>
    </div>
</div>
<!-- Call to Action End -->