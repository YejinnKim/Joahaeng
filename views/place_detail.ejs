<!-- Contact Start -->
<style>
    @import url('https://fonts.googleapis.com/css2?family=Do+Hyeon&family=Ubuntu:wght@700&display=swap');
    </style>
<div class="container-xxl py-5">
    <div class="container">
        <div>
            <div class="row g-4">
                <div class="col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="position-relative w-100 h-100" style="min-height: 400px; border:0;">
                        <img class="img-fluid rounded" src="<%= data.firstimage %>">
                    </div>
                </div>
                <div class="col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <h3 class="mb-5 px-3"><%= data.title %></h3>
                    <h5 class="mb-2 px-3">상세정보</h5>
                    <hr class="mb-5 px-3" style="width: 95%; border: 0px; border-top: 3px solid #0191fe;"/>
                    <p class="mb-3 px-3">주소 : <%= data.addr1 %> <%= data.addr2 %></p>
                    <p class="mb-3 px-3">관광지 테마 : <% for (let i=0; i < category.length; i++) { %>
                        <% if (category[i].code == data.cat1) { %>
                            <%= category[i].name %>
                        <% } %>
                    <% } %></p>
                </div>
            </div>
        </div>
        <a href="/board?contentid=<%=data.contentid%>" class="btn btn-primary border-0 w-100 py-3 mt-5 fw-bold" type="button">해당 관광지 후기 보러가기</a>
        <div>
            <div class="mt-5" data-wow-delay="0.1s">
                <div id="map2" style="width:100%;height:400px;"></div>
            </div>
        </div>

        <input id="mapx" type="hidden" value="<%= data.mapx %>">
        <input id="mapy" type="hidden" value="<%= data.mapy %>">
        <input id="mlevel" type="hidden" value="<%= data.mlevel %>">
    </div>
</div>
<!-- Contact End -->